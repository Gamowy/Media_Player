<Window x:Class="Media_Player.LyricsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="600"
        Width="600"
        Title="Lyrics" MinHeight="600" MinWidth="600"
        x:Name="LyricWindow"
        Background="#222222"
        WindowStartupLocation="CenterScreen"
        >
    <Grid>
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <TextBlock x:Name="LyricsTextBlock" TextWrapping="Wrap" FontSize="16" Foreground="White" TextAlignment="Center" FontWeight="Bold"/>
        </ScrollViewer>
    </Grid>
</Window>

